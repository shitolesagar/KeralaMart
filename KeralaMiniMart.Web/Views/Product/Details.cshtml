<div class="block-container m-t-20">
    <p class="f-bold f-16">Pricing </p>
    <div class="row">
        <div class="col-2">
            <div class="form-group m-t-10  float-container position-relative">
                <label class="control-label float-label">Original Price</label>
                <p class=""> @(string.IsNullOrEmpty(Model.OriginalPrice) ? "NA" : "₹ " + Model.OriginalPrice)</p>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group m-t-10 float-container position-relative">
                <label class="control-label float-label">Offer Price</label>
                <p class=""> @(string.IsNullOrEmpty(Model.DiscountedPrice) ? "NA": "₹ " + Model.DiscountedPrice)</p>
            </div>
        </div>
    </div>
</div>

