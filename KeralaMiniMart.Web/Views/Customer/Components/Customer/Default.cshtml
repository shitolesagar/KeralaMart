@model KeralaMiniMart.Entities.WebViewModels.CustomerWrapperViewModel

<div id="indexPartialContent" class="table-wrapper">
    @if (Model.TotalCount <= 0)
    {
        <div class="list-empty-state">
            @if (ViewBag.ShowEmptyState == true)
            {
                <p class="mt-3 f-22 f-bold">
                    No customers are registered yet.
                </p>
            }
            else
            {
                <p class="m-t-25 f-22 f-bold">
                    No Result Found!
                </p>
                <p class="f-gray m-t-10 f-14">We couldn't find the item you were looking for. Please try again.</p>
            }
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Sr. no.</th>
                    <th>Name</th>
                    <th>Mobile Number</th>
                    <th>Email </th>
                    <th>Register on</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserList)
                {
                    <tr onclick="gotoDetailsPage('@user.Id')">
                        <td>@user.Number</td>
                        <td>@user.Name</td>
                        <td>@user.PhoneNumber</td>
                        <td>@(string.IsNullOrEmpty(user.Email)? "NA": user.Email)</td>
                        <td>@user.CreatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
        <!--Pagination-->
        <partial name="_pagination" model="Model.PagingData" />
    }
</div>