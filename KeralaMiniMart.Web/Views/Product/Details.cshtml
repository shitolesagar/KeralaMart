<div class="block-container m-t-20">
    <p class="f-bold f-16">Inventory</p>
    <div class="row">
        <div class="col-2">
            <label class="float-label m-t-10">Selected Unit</label>
            <p class=""> @Model.UnitName</p>
        </div>
        <div class="col-2">
            <label class="float-label m-t-10">Product Weight</label>
            <p class=""> @Model.Quantity</p>
        </div>
        <div class="col-2">
            <div class="form-group m-t-10 float-container position-relative">
                <label class="control-label float-label">Stock Keeping Unit</label>
                <p class=""> @(Model.StockKeepingUnit ?? "NA")</p>
            </div>
        </div>
        <div class="col-3">
            <label class="float-label m-t-10">Is products quantity automated?</label>
            <p class="" id=select> @Model.IsAvailable</p>
        </div>
        <div class="col-3" id="AvailableQuantity">
            <div class="form-group mt-2 float-container position-relative">
                <label class="control-label float-label">Available Quantity</label>
                <p class=""> @Model.AvailableQuantity</p>
            </div>
        </div>
        @*<div class="col-2">
            <label class="float-label m-t-10">Is Product Exclusive?</label>
            <p class=""> @Model.IsExclusive</p>
        </div>*@
    </div>
</div>

<partial name="_deletePopup" />

@section Scripts{
    <script src="~/js/simple-lightbox.min.js"></script>
    <script>
        var message = "@message";
        if (message) {
            ShowSlackbarSucessMessage(message);
        }

        $(function () {
            var $gallery = $('.gallery a').simpleLightbox();
        });

        $(document).ready(function () {
            if ($("#select").text() == "No") {
                $("#AvailableQuantity").hide();
            }
        });
    </script>
}

